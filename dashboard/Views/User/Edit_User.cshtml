@model user_dashboard.Models.UserViewModels

@{
    ViewData["Title"] = "Edit User";
}
<link rel="stylesheet" href="~/css/useredit_style.css"/>
<div class="container">
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand">Test App</a>
        <div class="navbar-nav">               
            <a class=" nav-link" href="/dashboard">Dashboard</a>
        </div>
        <div class="navbar-nav">
            <a class="nav-link" href="/users/show/@ViewBag.user.UserId">Profile</a>
        </div>
        <button class="navbar-text"><a href="/logout">Logout</a></button>
    </nav>
    <br>
    <div class="row">
        <div class="col-md-4">
            <h3>Edit Information</h3>
            <form asp-controller="User" asp-action="User_Edit_Process" method="post" class="edit_info">
                <p>Email Address:</p>
                <input asp-for="UserEdit.email">
                <p>First Name:</p>                
                <input asp-for="UserEdit.first_name">
                <p>Last Name:</p>
                <input asp-for="UserEdit.last_name">
                <br><br>
                <button class="btn btn-success">Save</button>
                <div asp-validation-summary="All"></div>
            </form>  
        </div>
        <div class="col-md-5">
            <h3>Change Password</h3>
            <form asp-controller="User" asp-action="Change_PW_User" method="post" 
            class="edit_pw">
                <p>Password</p>
                <input asp-for="AdminPass.password">
                <p>Password Confirmation</p>
                <input asp-for="AdminPass.passwordconfirmation">
                <br><br>
                <button class="btn btn-success">Update Password</button>   
            </form>        
        </div>
    </div>
        <br><br>
        <div class="row">
            <h2>Edit Description</h2>
        </div>     
        <div class="row">        
            <form action="/users/change_description" method="post">
                <textarea name="Description_Field" rows="6" cols ="100"></textarea>
                <br>
                <button class="btn btn-success">Save</button> 
            </form>
        </div>
    </div>
</div>